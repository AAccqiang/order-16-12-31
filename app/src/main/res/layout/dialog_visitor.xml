<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_clear_black_12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"/>

    <EditText
        android:id="@+id/et_visitorNum"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_visitor"
        android:hint="请输入客人数(最多9位)"
        android:padding="10dp"
        android:layout_below="@id/iv_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:maxLength="1"
        android:inputType="number"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/dialog_btn_ok"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@id/et_visitorNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="确认"
        android:textColor="@android:color/white"
        android:background="@drawable/selector_btn_login"
        android:layout_marginBottom="20dp"/>




</RelativeLayout>