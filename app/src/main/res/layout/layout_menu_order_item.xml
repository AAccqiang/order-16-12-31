<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="60dp"

    android:descendantFocusability="blocksDescendants">

    <Button
        android:id="@+id/btn_z"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="1"
        android:background="@mipmap/order_bg_num"
        android:layout_marginLeft="10dp"
        android:textSize="11sp"
        android:textColor="@color/main_color"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/btn_z"
        android:src="@mipmap/menu_xia"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水煮鱼(热菜)"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_menu"
        android:layout_marginLeft="15dp"
         />
    
    <Button
        android:id="@+id/btn_remark"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="135dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_menu"
        android:background="@drawable/selecet_btns"
        android:textColor="#646464"
        android:ellipsize="end"
        android:maxLength="6"
        android:textSize="12sp"
        android:text="啊啊啊啊啊啊啊"/>

    <Button
        android:id="@+id/btn_left"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_left"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btn_remark"/>

    <Button
        android:id="@+id/btn_num"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@drawable/btn_empty_no"
        android:layout_centerVertical="true"
        android:textSize="12dp"
        android:textColor="#646464"
        android:layout_toRightOf="@+id/btn_left"/>

    <Button
        android:id="@+id/btn_right"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_right"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btn_num"/>

    <TextView
        android:id="@+id/tv_menu_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_right"
        android:text="￥ 250.00"
        android:textColor="#646464"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="57dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="删除"
        android:textColor="@drawable/btn_color"
        android:textSize="12dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_bg_query"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#ddd"
        />

</RelativeLayout>