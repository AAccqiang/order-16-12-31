<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login_alter_ET">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/logon_username_transparent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColorHint">#AAA7A8</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="menu_right">
        <item name="android:textSize">@dimen/menu_dm</item>
        <item name="android:textColor">@color/menu_font</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="schedle_view">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/main_color</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="schedle_view_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>
